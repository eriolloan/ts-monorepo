{
    "preset": "ts-jest/presets/js-with-ts-esm",
    "extensionsToTreatAsEsm": [
        ".ts"
    ],
    "testMatch": [
        "<rootDir>/src/**/*.test.ts"
    ],
    "transform": {
        "^.+\\.tsx?$": [
            "ts-jest",
            {
                "useESM": true
            }
        ]
    },
    "moduleNameMapper": {
        "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transformIgnorePatterns": [
        "/node_modules/",
        "^.+\\.js$"
    ]
}